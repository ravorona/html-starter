{
    "printWidth": 120,
    "useTabs": false,
    "tabWidth": 4,
    "singleQuote": true,
    "quoteProps": "consistent",
    "arrowParens": "avoid",
    "trailingComma": "none",
    "semi": false,
    "overrides": [
        {
            "files": ["*.yml"],
            "options": {
                "singleQuote": false
            }
        },
        {
            "files": [".stylelintrc", ".eslintrc", "package.json", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
